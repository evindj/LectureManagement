@model HRManagement.Models.RegisterViewModel
@{
    ViewBag.Title = "Register call me the king";
}
<div class="container">
    <div>
        <h2>@ViewBag.Title.</h2>


        @using (Html.BeginForm("Register", "Explorer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

           

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>
            </div>
        }
    </div>
    <div class="modal fade">
                <a href="#" class=" btn pull-right btn-success " >Thank You</a> 
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                   
                    <h4 class="modal-title" id="myModalLabel">Thank you from the botton of the <span class="glyphicon glyphicon-heart"></span> </h4>
                </div>
                <div class="modal-body">
                    <h3>Congratulations !!!!</h3>
                    You’ve been selected to be part of the Zoomlab Education explorer program. Before you can officially dive into the program, accept our gratitude as you’ll be the first step in enabling us to put forth beautiful products in the hope of providing knowledge to millions of people.
                    At the heart of Zoomlab, we believe knowledge is the number one weapon to solve today’s and tomorrow’s problems.  It does not matter if you are in technology, science, business, art, culture or even philosophy your contribution will make an incredible impact on someone life. Think about it for a second is that not a goal we all want to achieve?

                </div>
                <div class="modal-footer">
                   
                    <button type="button" data-dismiss="modal" class="btn btn-primary">Thank you</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript"  >
   
    $('#myModal').modal('show');
</script>

@section Scripts {
@Scripts.Render("~/bundles/jquery");
    @Scripts.Render("~/bundles/jqueryval");
@Scripts.Render("~/bundles/bootstrap");
<script type="text/javascript">

    $('#myModal').modal('show');
</script>

}
